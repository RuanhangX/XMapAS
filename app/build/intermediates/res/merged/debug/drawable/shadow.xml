<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- layout background -->
    <item>
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:startColor="#50FFFFFF"
                android:centerColor="#50000000"
                android:endColor="#50FFFFFF"/>
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="2dp"
        android:top="2dp"
        android:left="2dp"
        android:right="2dp">
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <solid android:color="#50FFFFFF" />
        </shape>
    </item>
</layer-list>
